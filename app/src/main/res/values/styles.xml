<resources xmlns:tools="http://schemas.android.com/tools" tools:ignore="SpUsage">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="colorPrimaryDark">@color/whiteGreen</item>
        <item name="fontPath">fonts/WorkSans-Regular.ttf</item>
    </style>

    <style name="NormalTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionModeOverlay">false</item>
        <item name="android:windowActionBarOverlay">false</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="colorPrimaryDark">@color/whiteGreen</item>
        <item name="fontPath">fonts/WorkSans-Regular.ttf</item>
    </style>

    <!--BOLD FONTS-->

    <style name="Text.B1" parent="AppTheme">
        <item name="fontPath">fonts/WorkSans-Bold.ttf</item>
        <item name="android:textSize">40dp</item>
        <item name="android:textColor">@color/colorGrey500</item>
    </style>

    <style name="Text.B2" parent="Text.B1">
        <item name="android:textSize">26dp</item>
    </style>

    <style name="Text.B3" parent="Text.B1">
        <item name="android:textSize">16dp</item>
    </style>

    <style name="Text.B4" parent="Text.B1">
        <item name="android:textSize">12dp</item>
    </style>

    <style name="Text.B14" parent="Text.B1">
        <item name="android:textSize">14dp</item>
    </style>

    <!--TABLET FONTS-->


    <!--REGULAR FONTS-->
    <style name="Text.ActionBar.Title" parent="Text.B2">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">23dp</item>
    </style>

    <style name="Text.R1" parent="AppTheme">
        <item name="fontPath">fonts/WorkSans-Regular.ttf</item>
        <item name="android:textSize">40dp</item>
        <item name="android:textColor">@color/colorGrey500</item>
    </style>

    <style name="Text.R3" parent="Text.R1">
        <item name="android:textSize">16dp</item>
    </style>

    <style name="Text.R2" parent="Text.R1">
        <item name="android:textSize">26dp</item>
    </style>

    <style name="Text.R20" parent="Text.R1">
        <item name="android:textSize">20dp</item>
    </style>

    <style name="Text.R4" parent="Text.R1">
        <item name="android:textSize">12dp</item>
    </style>
    <style name="Text.R13" parent="Text.R1">
        <item name="android:textSize">13dp</item>
    </style>

    <!--TABLET FONTS-->


    <!--LIGHT FONTS-->

    <style name="Text.L1" parent="AppTheme">
        <item name="fontPath">fonts/WorkSans-Light.ttf</item>
        <item name="android:textSize">40dp</item>
        <item name="android:textColor">@color/colorGrey500</item>
    </style>

    <style name="Text.L3" parent="Text.L1">
        <item name="android:textSize">16dp</item>
    </style>

    <style name="Text.L4" parent="Text.L1">
        <item name="android:textSize">12dp</item>
    </style>

    <!--TABLET FONTS-->


    <style name="DialogSideInOutAnimation">
        <item name="android:windowEnterAnimation">@anim/enter_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/exit_to_bottom</item>
    </style>


</resources>
